{
  "name": "hugo-boilerplate",
  "version": "1.0.0",
  "description": "My personal boilerplate for kicking out static sites using Hugo and Webpack.",
  "repository": "https://github.com/NathanWorkman/hugo-boilerplate",
  "author": "Nathan Workman",
  "license": "MIT",
  "scripts": {
    "dev": "run-p dev:**",
    "dev:hugo": "hugo -d public -vw",
    "dev:webpack": "webpack-dev-server --config webpack.dev.js --hot",
    "build": "npm run build:webpack && npm run build:hugo",
    "build:preview": "npm run build:webpack && npm run build:hugo:preview",
    "build:hugo": "hugo -d public -v --minify",
    "build:hugo:preview": "npm run build:hugo -- -D -F",
    "build:webpack": "cross-env NODE_ENV=production webpack --config webpack.prod.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/plugin-syntax-object-rest-spread": "^7.8.0",
    "@babel/preset-env": "^7.12.7",
    "@babel/register": "^7.12.1",
    "assets-webpack-plugin": "^6.1.0",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.3.2",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "eslint": "^7.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.2.0",
    "file-loader": "^6.2.0",
    "hugo-bin": "^0.67.0",
    "mini-css-extract-plugin": "^1.3.1",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss": "^8.1.14",
    "postcss-import": "^13.0.0",
    "postcss-loader": "^4.1.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "sass": "^1.29.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.0.3",
    "webpack": "^5.9.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "4.0.0-beta.0",
    "webpack-merge": "^5.4.0",
    "whatwg-fetch": "^3.5.0"
  },
  "dependencies": {
    "bootstrap": "5.0.0-alpha3",
    "bootstrap-icons": "1.1.0",
    "popper.js": "^1.16.1"
  }
}
