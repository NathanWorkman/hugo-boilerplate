{
  "name": "hugo-boilerplate",
  "version": "1.0.0",
  "description": "My personal boilerplate for kicking out static sites using Hugo and Webpack.",
  "repository": "https://github.com/NathanWorkman/hugo-boilerplate",
  "author": "Nathan Workman",
  "license": "MIT",
  "scripts": {
    "dev": "run-p dev:**",
    "dev:hugo": "hugo -d public -vw",
    "dev:webpack": "webpack-dev-server --config webpack.dev.js --hot",
    "build": "npm run build:webpack && npm run build:hugo",
    "build:preview": "npm run build:webpack && npm run build:hugo:preview",
    "build:hugo": "hugo -d public -v --minify",
    "build:hugo:preview": "npm run build:hugo -- -D -F",
    "build:webpack": "cross-env NODE_ENV=production webpack --config webpack.prod.js --scripts-prepend-node-path"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.1",
    "@babel/plugin-syntax-object-rest-spread": "^7.8.0",
    "@babel/preset-env": "^7.10.2",
    "@babel/register": "^7.10.1",
    "assets-webpack-plugin": "^5.0.2",
    "babel-eslint": "^10.0.2",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.2",
    "cross-env": "^7.0.2",
    "css-loader": "^3.6.0",
    "eslint": "^7.2.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-prettier": "^3.1.4",
    "exports-loader": "^1.0.1",
    "fancy-log": "^1.3.2",
    "file-loader": "^6.0.0",
    "hugo-bin": "^0.60.0",
    "imports-loader": "^1.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "plugin-error": "^1.0.1",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.5",
    "prettier-eslint": "^11.0.0",
    "rimraf": "^3.0.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.1.4",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "url-loader": "^4.1.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.1.4",
    "whatwg-fetch": "^3.0.0"
  },
  "dependencies": {
    "bootstrap": "^4.5.0",
    "jquery": "^3.5.1",
    "popper.js": "^1.16.1"
  }
}
